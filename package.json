{
  "name": "seniore",
  "version": "5.0.0",
  "description": "Gracefully manage your GitHub and Jira workflow",
  "keywords": [
    "github",
    "jira",
    "workflow",
    "cli",
    "liferay"
  ],
  "author": "Pablo Molina <contact@pablomolina.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/p2kmgcl/seniore"
  },
  "main": "build/index.js",
  "files": [
    "package.json",
    "bin/seniore",
    "build/**/*"
  ],
  "bin": {
    "seniore": "bin/seniore",
    "s": "bin/seniore"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "check-format": "prettier --list-different .",
    "format": "prettier --write .",
    "lint": "eslint --max-warnings 0 --fix src/**/*.{ts,tsx}",
    "test":  "jest"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*": "prettier --write",
    "*.ts": "eslint --max-warnings 0 --fix",
    "*.tsx": "eslint --max-warnings 0 --fix"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "dependencies": {
    "@octokit/rest": "^17.11.0",
    "ajv": "^6.12.3",
    "chalk": "^4.1.0",
    "commander": "^5.1.0",
    "date-fns": "^2.13.0",
    "execa": "^4.0.0",
    "jira-client": "^6.17.0",
    "update-notifier": "^4.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "^8.3.4",
    "@types/node": "^10.17.26",
    "@types/update-notifier": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "ts-jest": "^26.4.1",
    "typescript": "^3.8.3"
  }
}
