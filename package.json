{
  "name": "seniore",
  "version": "5.0.0",
  "description": "Gracefully manage your GitHub and Jira workflow",
  "keywords": [
    "github",
    "jira",
    "workflow",
    "cli",
    "liferay"
  ],
  "author": "Pablo Molina <contact@pablomolina.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/p2kmgcl/seniore"
  },
  "main": "build/index.js",
  "files": [
    "package.json",
    "bin/seniore",
    "build/**/*"
  ],
  "bin": {
    "seniore": "bin/seniore",
    "s": "bin/seniore"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "check-format": "prettier --list-different .",
    "format": "prettier --write .",
    "lint": "eslint --max-warnings 0 --fix src/**/*.ts",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*": "prettier --write",
    "*.ts": "eslint --max-warnings 0 --fix",
    "*.tsx": "eslint --max-warnings 0 --fix"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "dependencies": {
    "@octokit/rest": "^17.11.2",
    "ajv": "^6.12.5",
    "chalk": "^4.1.0",
    "commander": "^6.1.0",
    "date-fns": "^2.16.1",
    "execa": "^4.0.3",
    "jira-client": "^6.21.1",
    "update-notifier": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "^8.3.4",
    "@types/node": "^10.17.37",
    "@types/update-notifier": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^6.8.0",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  }
}
