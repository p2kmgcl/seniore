{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "build",
    "strict": true,
    "lib": ["ES2018"],
    "target": "ES2018"
  },

  "include": ["src"],
  "exclude": ["**/__test__/**"]
}
